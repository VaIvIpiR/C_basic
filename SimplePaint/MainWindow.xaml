<Window x:Class="SimplePaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplePaint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <Button Click="StartDrawingLines" Width="200">Draw Line</Button>
            <Button Click="StartDrawingCircles" Width="200">Draw Circle</Button>
            <Button Click="StartDrawingSquares" Width="200">Draw Square</Button>
            <Button Click="Clear" Width="200">Clear</Button>
        </StackPanel>
        <Canvas Grid.Row="1"
                Grid.Column="0"  
                Name="MyCanvas"
                MouseLeftButtonUp="HandleMouseClick"
                Width="800"
                Height="448"
                Background="WhiteSmoke">
        </Canvas>
    </Grid>
</Window>
